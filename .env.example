# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# NVIDIA NIM API (OpenAI-compatible)
NVIDIA_API_KEY=nvapi-your-nvidia-key-here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# Custom OpenAI-Compatible Endpoints (Optional)
# You can add multiple custom endpoints for different providers
CUSTOM_API_KEY_1=your-custom-api-key-here
CUSTOM_BASE_URL_1=https://your-custom-endpoint.com/v1
CUSTOM_API_KEY_2=your-second-custom-key
CUSTOM_BASE_URL_2=https://another-endpoint.com/v1

# Default Agent Configuration
# Supported model formats:
#   OpenAI: gpt-4, gpt-3.5-turbo, gpt-4-turbo-preview
#   Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
#   NVIDIA NIM: nvidia:qwen/qwen3-next-80b-a3b-instruct, nvidia:meta/llama-3.1-70b-instruct
#   Custom: custom1:your-model-name, custom2:another-model

AGENT_A_MODEL=gpt-4
AGENT_A_TEMPERATURE=0.7
AGENT_A_MAX_TOKENS=1000

AGENT_B_MODEL=gpt-4
AGENT_B_TEMPERATURE=0.7
AGENT_B_MAX_TOKENS=1000

# Example configurations:
# AGENT_A_MODEL=nvidia:qwen/qwen3-next-80b-a3b-instruct
# AGENT_B_MODEL=nvidia:meta/llama-3.1-70b-instruct
# AGENT_A_MODEL=custom1:mistral-large
# AGENT_B_MODEL=custom2:deepseek-coder

# Conversation Settings
DEFAULT_MAX_TURNS=30
CONTEXT_WINDOW_SIZE=10  # Number of previous turns to include

# Database
DATABASE_PATH=storage/conversations.db

# Analysis
ANALYSIS_MODEL=gpt-4  # Model to use for meta-analysis
ENABLE_AUTO_ANALYSIS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aa_microscope.log
